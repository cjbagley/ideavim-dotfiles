let mapleader=" "

set relativenumber
set ignorecase
set clipboard='unnamedplus'
set ignorecase
set hlsearch
set smartcase
set scrolloff=8
set sidescrolloff=8
set timeoutlen=300
set ideastatusicon=disabled

set sneak
set surround
set commentary

""" Only define keymaps with leader, otherwise just replace keymaps in the IDE
""" e.g. autocomplete could not be set to <C-k> here, but can in IDE settings
map <leader>o <Action>(FileStructurePopup)
map <leader>h <Action>(RecentFiles)
map <leader>g <Action>(FindInPath)
map <leader>f <Action>(GotoFile)
map <leader>n <Action>(ActivateProjectToolWindow)
map <leader>w <Action>(ReformatCode)
map <leader><S-\> <Action>(SplitVertically)
map <leader>q <Action>(CloseContent)
